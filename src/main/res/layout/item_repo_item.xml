<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:background="#403636">

    <ImageView
        android:id="@+id/item_repo_item_repo_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="@+id/item_repo_item_img_image_view"
        app:layout_constraintEnd_toStartOf="@+id/item_repo_item_img_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_repo_item_img_image_view" />

    <TextView
        android:id="@+id/item_repo_item_repo_name_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_repo_item_img_image_view"
        app:layout_constraintEnd_toStartOf="@+id/item_repo_item_repo_favourite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_repo_item_img_image_view"
        app:layout_constraintVertical_bias="0.29000002"
        tools:text="repo" />

    <TextView
        android:id="@+id/item_repo_item_user_name_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_repo_item_img_image_view"
        app:layout_constraintEnd_toEndOf="@+id/item_repo_item_repo_name_ed"
        app:layout_constraintStart_toStartOf="@+id/item_repo_item_repo_name_ed"
        app:layout_constraintTop_toBottomOf="@+id/item_repo_item_repo_name_ed"
        tools:text="user name" />

    <ImageView
        android:id="@+id/item_repo_item_img_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>